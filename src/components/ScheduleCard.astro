---
import "../styles/globals.css";
const { 
    title = "TBA", 
    speaker = "", 
    startTime = "TBA", 
    endTime = "TBA", 
    location = "KBG-12",
    description = "",
    imageSrc = "/src/assets/Sistem2025Dark.png"} = Astro.props;
--- 
<main>
    <div class="cardBorderWrap">
        <div class="card">
            <div class="row">
                <div class="col text">
                    <h2 class="gradientUnderline">[{startTime} - {endTime}] &nbsp; {title}</h2> 
                    <h3>{speaker} @ {location}</h3>
                    <p>{description}</p>
                </div>
                <div class="col image">
                    <img src= {imageSrc} alt="Logo">
                </div>
            </div>
        </div>
    </div>
</main>

<style>
    main {
        max-width: 60%;
        margin-left: auto;
        margin-right: auto;
    }

    .card {
        background-color: white;
        padding: 2rem;
        border-radius: 3px;
        z-index: -1;
    }

    .cardBorderWrap {
        position: relative;
        background: linear-gradient(to right, var(--blue-gradient), var(--green-gradient));
        padding: 0.2rem;
        border-radius: 5px;
        z-index: -2;
    }

    /* Flexbox Grid */
    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .col {
        flex: 1;
        min-width: 0;
    }

    .text {
        flex: 2;
    }

    .image {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .image img {
        max-width: 100%;
        height: auto;
    }

    /* Responsive Adjustments */
    @media screen and (max-width: 768px) {
        .row {
            flex-direction: column;
        }

        .image {
            justify-content: flex-start;
        }
    }

    /* Gradient underline */
    .gradientUnderline {
        text-decoration: none;
        position: relative;
        display: inline-block;
    }

    .gradientUnderline::before {
        content: "";
        position: absolute;
        top: 100%;
        width: 100%;
        left: 0;
        height: 0.2rem;
        border-radius: 5px;
        background: linear-gradient(to right, var(--blue-gradient), var(--green-gradient));
    }
</style>
