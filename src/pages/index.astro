<script>
  const count = document.querySelector(".count") as Element;
  const unit = document.querySelector(".unit") as Element;
  const confDate = new Date("2025-03-08");
  const today = new Date();

  let msLeft = confDate.valueOf() - today.valueOf();
  count.innerHTML = Math.ceil(msLeft / (1000 * 60 * 60 * 24)).toString();
  unit.innerHTML = "days left";
</script>