---
import "../styles/globals.css";
import "../styles/sistem.css";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section id="hero">
    <h1>
      A tech conference for students <br />
      <span class="colors"> by students </span>
    </h1>
    <p class="details">
      Saturday 8<sup>th</sup> March 2025<br />
      University of Limerick
    </p>
    <div class="cta">
      <a href="/">BUY TICKETS</a>
    </div>
  </section>

  <br />

  <main>
    <section id="about">
      <div class="stats">
          <div>
            <span class="num colors">1</span><span class="unit">Day</span>
          </div>

          <div>
            <span class="num colors">2</span><span class="unit">Tracks</span>
          </div>
        
          <div>
            <span class="num colors">12</span><span class="unit">Sessions</span>
          </div>

          <div>
            <span class="num colors">200+</span><span class="unit">Attendees</span
            >
          </div>
      </div>

      <p>
        SISTEM is Ireland's most exciting student tech conference, run (almost)
        every year by volunteers dedicated to spreading the word about new,
        exciting developments in the field and inpiring the next generation of
        hackers, innovators, and entrepreneurs.
      </p>
    </section>

    <section id="sponsors">
      <h2>Sponsors</h2>

      <div class="cardholder">
        <div class="card"></div>
        <div class="card"></div>
        <div class="card"></div>
      </div>
    </section>

